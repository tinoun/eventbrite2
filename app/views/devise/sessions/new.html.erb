<div class="container">

  <h2>Se connecter</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "email or username" %>
    </div>

    <div class="field">
      <%= f.label :mot_de_passe %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :se_souvenir_de_moi %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Se connecter" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>